<?xml version="1.0" encoding="UTF-8"?>

<template>
    <t t-name="graph_dashboard_ept">

        <div class="row">
            <div class="col-12 mt4 ep_kanban_records">
                <a id="instance_employee" class="ep-bg-1">
                    <t t-if="widget.graph_data.employee_data">
                        <p class="text-center mb0 font-weight-bold">
                            <t t-esc="widget.graph_data.employee_data.employee_count" />
                        </p>
                    </t>
                    <p class="text-center mb0">Employees</p>
                </a>
                <a id="instance_department" class="ep-bg-1">
                    <t t-if="widget.graph_data.department_data">
                        <p class="text-center mb0 font-weight-bold">
                            <t t-esc="widget.graph_data.department_data.department_count" />
                        </p>
                    </t>
                    <p class="text-center mb0">Departments</p>
                </a>
                <a id="instance_leave" class="ep-bg-1">
                    <t t-if="widget.graph_data.leave_data">
                        <p class="text-center mb0 font-weight-bold">
                            <t t-esc="widget.graph_data.leave_data.leave_count" />
                        </p>
                    </t>
                    <p class="text-center mb0">Departments</p>
                </a>
            </div>
        </div>
        <div class="row o_kanban_record_top">
            <div class="col-12 mt4">
                <div id="hrms_left" class="float-left o_kanban_top_left">
                    <div id="perform_operation" class="o_kanban_record_headings">
                        <button class="btn btn-primary ep-btn-primary">
                            <span>Perform Operation</span>
                        </button>
                    </div>
                </div>
                <div class="o_kanban_primary_bottom ep_o_kanban_setting">
                    <div>
                        <a id="instance_log">
                            <span class="mr4">
                                <img class="img img-responsive m-auto"
                                    src="/hr_data_import/static/src/img/log.svg"
                                    style="width: 16px;display: inline-block;" />
                            </span>
                            <span class=" font-weight-bold">Logs</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </t>
</template>