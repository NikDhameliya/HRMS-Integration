        <!-- Action for hrms oprations-->
        <record id="action_wizard_hrms_import_orders_in_hr_data_import"
            model="ir.actions.act_window">
            <field name="name">HRMS Operations</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">process.import.export</field>
            <field name="view_mode">form</field>
            <field name="view_id"
                ref="view_hrms_process_import_export_ept" />
            <field name="target">new</field>
        </record>

        <!-- Below action used to redirect operation wizard from the instance kanban view-->
        <record
            id="action_wizard_hrms_instance_import_export_operations" model="ir.actions.act_window">
            <field name="name">Operations</field>
            <field name="type">ir.actions.act_window</field>
