<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--Wizard for perform
        opration.-->
        <record id="view_hrms_process_import_export_ept" model="ir.ui.view">
            <field name="name">Process Import/Export</field>
            <field name="model">process.import.export</field>
            <field name="priority">11</field>
            <field name="arch" type="xml">
                <form string="Import/Export">
                    <sheet>
                        <style>
                            .embed-responsive-item {
                            width: 25rem !important;
                            min-height: 15rem !important;
                            }
                        </style>
                        <div style="padding-left:5px;">

                            <group name='hrms_instance'>
                                <group>
                                    <field name='hrms_instance_id'
                                        options="{'no_create':True,'no_create_edit': True,'no_open': True}"
                                        required="1" domain="[('active','=',True)]" />
                                </group>
                                <group>
                                    <field name='hrms_operation' string="Operations" required="1" />
                                </group>
                            </group>
                            <div name="msg_opr_main">
                                <div invisible="'hrms_operation' !=  'sync_employee'">
                                    <p colspan="2" class="alert alert-warning" role="alert">
                                        <b>
                                            <u>
                                                <h3 style="font-weight:bold;color:#7d5a29">Note :
                                                </h3>
                                            </u>
                                            <ol>
                                                <li>
                                                    It will start fetching Employee data from HRMS
                                                    and will just add
                                                    that data in Queue for processing. (HRMS
                                                    &gt; Processes &gt;
                                                    Queues Logs &gt; Employees)
                                                </li>
                                            </ol>
                                        </b>
                                    </p>
                                </div>
                                <div invisible="'hrms_operation' !=  'sync_department'">
                                    <p colspan="2" class="alert alert-warning" role="alert">
                                        <b>
                                            <u>
                                                <h3 style="font-weight:bold;color:#7d5a29">Note :
                                                </h3>
                                            </u>
                                            <ol>
                                                <li>
                                                    It will start fetching Department data from HRMS
                                                    and will just add
                                                    that data in Queue for processing. (HRMS
                                                    &gt; Processes &gt;
                                                    Queues Logs &gt; Departments)
                                                </li>
                                            </ol>
                                        </b>
                                    </p>
                                </div>
                                <div invisible="'hrms_operation' !=  'sync_leave'">
                                    <p colspan="2" class="alert alert-warning" role="alert">
                                        <b>
                                            <u>
                                                <h3 style="font-weight:bold;color:#7d5a29">Note :
                                                </h3>
                                            </u>
                                            <ol>
                                                <li>
                                                    It will start fetching Leave data from HRMS
                                                    and will just add
                                                    that data in Queue for processing. (HRMS
                                                    &gt; Processes &gt;
                                                    Queues Logs &gt; Leaves)
                                                </li>
                                            </ol>
                                        </b>
                                    </p>
                                </div>
                            </div>
                            <notebook>
                                <page string='Sync Option'>
                                    <div class="row">
                                        <div class='col-md-6'>
                                            <group name='sync_employees'
                                                invisible="'hrms_operation' != 'sync_employees'">
                                                <field name="skip_existing_employee" />
                                            </group>
                                            <group name='sync_leave'
                                                invisible="'hrms_operation' != 'sync_leave'">
                                                <field name="skip_existing_leave" />
                                            </group>
                                        </div>
                                        <div class="col-md-6">
                                            <group name='sync_department'
                                                invisible="'hrms_operation' != 'sync_department'">
                                                <field name="skip_existing_department" />
                                            </group>
                                        </div>
                                    </div>
                                </page>
                            </notebook>
                            <footer>
                                <button string="Execute" class="oe_highlight"
                                    type="object" name="hrms_execute" />
                                <button string="Cancel" class="oe_highlight"
                                    special="cancel" />
                            </footer>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Below view used for update employees-->
        <record id="view_update_employee_process_manual" model="ir.ui.view">
            <field name="name">Update Employee manual</field>
            <field name="model">process.import.export</field>
            <field name="arch" type="xml">
                <form string="Update Employee">
                    <sheet>
                        <p colspan="2" class="alert alert-danger" role="alert">
                            <b>
                                <u>
                                    <h3 style="font-weight:bold;color:#7d5a29">Important Note:</h3>
                                </u>

                                <ol>
                                    <li>
                                        If multiple employees are selected, a maximum of 80
                                        employees
                                        can be processed at a time.
                                    </li>
                                </ol>
                            </b>
                        </p>
                        <footer>
                            <button string="Update Employee" class="oe_highlight"
                                type="object" name="manual_update_employee_to_hrms" />
                            <button string="Cancel" class="oe_highlight"
                                special="cancel" />
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

