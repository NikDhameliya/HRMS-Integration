<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--This is a common view
        for queue process wizard -->
        <record id="view_queue_process_action" model="ir.ui.view">
            <field name="name">Queue Process Action</field>
            <field name="model">queue.process</field>
            <field name="priority">11</field>
            <field name="arch" type="xml">
                <form string="Manually Queue Process">
                    <sheet>
                        <group name='process_queue_manually'>
                            <p colspan="2" class="alert alert-warning" role="alert">
                                <b>
                                    <ol>
                                        <li> You can use this option: <br /> - If you don't want to
                                            wait for the cron to execute the queue and want to
                                            process the queue instantly. <br /> - If a queue line
                                            failed for any reason and if you think by making
                                            required changes in Odoo it can process it successfully,
                                            you can try this option. </li>
                                        <li>
                                            This will not fetch any data from the hrms store to
                                            reprocess
                                            it.
                                        </li>
                                        <li>
                                            This process might take some time to complete.
                                        </li>
                                    </ol>
                                </b>
                            </p>
                        </group>
                        <footer>
                            <button string="Process Queues Manually"
                                class="oe_highlight" type="object" name="manual_queue_process"
                                invisible="context.get('queue_process','') not in ['process_employee_queue_manually','process_department_queue_manually','process_leave_queue_manually']" />
                            <button string="Cancel" class="oe_highlight"
                                special="cancel" />
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <!--This
        is a common view for set completed queue -->
        <record id="view_set_to_completed_queue_process_action"
            model="ir.ui.view">
            <field name="name">Set To Completed Queue Action</field>
            <field name="model">queue.process</field>
            <field name="priority">11</field>
            <field name="arch" type="xml">
                <form string="Set To Completed">
                    <sheet>
                        <div name='set_to_completed_queue'>
                            <div style="color:#000000">
                                <p class="alert alert-warning" role="alert">
                                    <u>
                                        <h3 style="font-weight:bold;color:#7d5a29">Note :</h3>
                                    </u>
                                    <li>
                                        It will cancel all queue lines which are in draft and failed
                                        state.
                                    </li>
                                </p>
                            </div>
                        </div>
                        <footer>
                            <button string="Set To Completed Manually"
                                class="oe_highlight" type="object" name="set_to_completed_queue" />
                            <button string="Cancel" class="oe_highlight"
                                special="cancel" />
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>


        <!--Action
        for employee queue process manually-->
        <record id="action_sync_employee_queue_data" model="ir.actions.act_window">
            <field name="name">Process Queue Manually</field>
            <field name="res_model">queue.process</field>
            <field name="target">new</field>
            <field name="view_id" ref="hr_data_import.view_queue_process_action" />
            <field name="context">{'queue_process':'process_employee_queue_manually'}</field>
        </record>

        <record id="action_sync_department_queue_data" model="ir.actions.act_window">
            <field name="name">Process Queue Manually</field>
            <field name="res_model">queue.process</field>
            <field name="target">new</field>
            <field name="view_id" ref="hr_data_import.view_queue_process_action" />
            <field name="context">{'queue_process':'process_department_queue_manually'}</field>
        </record>

        <record id="action_sync_leave_queue_data" model="ir.actions.act_window">
            <field name="name">Process Queue Manually</field>
            <field name="res_model">queue.process</field>
            <field name="target">new</field>
            <field name="view_id" ref="hr_data_import.view_queue_process_action" />
            <field name="context">{'queue_process':'process_leave_queue_manually'}</field>
        </record>

        <!--Action
        for the manually set to completed employee queue-->
        <record id="action_wizard_set_to_completed_employee_queue" model="ir.actions.act_window">
            <field name="name">Set To Completed</field>
            <field name="res_model">queue.process</field>
            <field name="target">new</field>
            <field name="view_id" ref="hr_data_import.view_set_to_completed_queue_process_action" />
            <field name="context">{'queue_process':'set_to_completed_employee_queue'}</field>
        </record>

        <!--Action
        for the manually set to completed department queue-->
        <record id="action_wizard_set_to_completed_department_queue" model="ir.actions.act_window">
            <field name="name">Set To Completed</field>
            <field name="res_model">queue.process</field>
            <field name="target">new</field>
            <field name="view_id" ref="hr_data_import.view_set_to_completed_queue_process_action" />
            <field name="context">{'queue_process':'set_to_completed_department_queue'}</field>
        </record>

        <!--Action
        for the manually set to completed leave queue-->
        <record id="action_wizard_set_to_completed_leave_queue" model="ir.actions.act_window">
            <field name="name">Set To Completed</field>
            <field name="res_model">queue.process</field>
            <field name="target">new</field>
            <field name="view_id" ref="hr_data_import.view_set_to_completed_queue_process_action" />
            <field name="context">{'queue_process':'set_to_completed_leave_queue'}</field>
        </record>

    </data>
</odoo>