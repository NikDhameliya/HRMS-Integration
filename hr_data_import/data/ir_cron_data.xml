<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!--Auto cron job for process Employee data queue and it runs every 5 min.-->
        <record id="process_hrms_employee_queue" model="ir.cron">
            <field name="name">HRMS: Process Employee Queue</field>
            <field name="model_id" ref="model_employee_data_queue_line"/>
            <field name="state">code</field>
            <field name="code">model.sync_hrms_employee_into_odoo()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">5</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
        </record>

        <!--Auto cron job for process department data queue and it runs every 5 min.-->
        <record id="process_hrms_department_queue" model="ir.cron">
            <field name="name">HRMS: Process Department Queue</field>
