<?xml version="1.0"?>
<odoo>
    <data>
        <!--Tree view of Employee-->
        <record id="hrms_employee_tree_view" model="ir.ui.view">
            <field name="name">Employee Tree View</field>
            <field name="model">hrms.hr.employee</field>
            <field name="arch" type="xml">
                <tree create="false" sample="1">
                    <field name="name" />
                    <field name="hrms_instance_id" />
                    <field name="employee_id" />
                </tree>
            </field>
        </record>

        <!--Search
        view of employees-->
        <record model="ir.ui.view" id="hrms_employee_search_view_ept">
            <field name="name">hrms.employees.search</field>
            <field name="model">hrms.hr.employee</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Employee">
                    <field name="name" string="Employee"
                        filter_domain="['|','|',('name','ilike',self),('employee_id','ilike',self),('hrms_external_id','ilike',self)]" />
                    <!-- <filter string="Exported" name=""
                        icon="terp-accessories-archiver"
                        domain="[('exported','=','True')]"/> -->
                    <!-- <group expand="0" string="Group By">
                    <filter string="Exported"
                            name="Exported" domain="[]"
                            context="{'group_by':'exported'}"/>
                </group> -->
                </search>
            </field>
        </record>

        <!--Form
        view of employee-->
        <record id="hrms_employee_form_view_ept" model="ir.ui.view">
            <field name="name">HRMS Employee Form View</field>
            <field name="model">hrms.hr.employee</field>
            <field name="arch" type="xml">
                <form string="HRMS Employee Form View" create="false">
                    <sheet>
                        <field name="active" class="oe_inline" invisible='1' />
                        <div class="ribbon ribbon-top-right" invisible="active == True">
                            <span class="bg-danger"
                                style="left: -4px !important;top: 20px !important">Archived
                            </span>
                        </div>

                        <div class="oe_title" style="width: 390px;">
                            <label class="oe_edit_only" for="name" string="Title" />
                            <h1>
                                <field name="name" class="oe_inline" />
                            </h1>
                        </div>
                        <notebook>
                            <page string="HRMS Info">
                                <group>
                                    <group>
                                        <field name="hrms_instance_id" />
                                        <field name="employee_id" required="1" readonly="1" />
                                    </group>
                                    <group>
                                        <label for="hrms_external_id" />
                                        <div name="hrms_employee_link">
                                            <field name="hrms_external_id" readonly="1"
                                                style="width:auto !important;" />
                                        </div>
                                    </group>
                                    <group>
                                        <field name="created_at" readonly="1" />
                                        <field name="updated_at" readonly="1" />
                                    </group>
                                    <group>
                                        <field name="created_at" />
                                    </group>
                                </group>
                                <!-- <div string="Description">
                                <field name="description" nolabel="1"/>
                            </div> -->
                            </page>
                            <!-- <page string="Images">
                            <div string="Images Info" colspan="4">
                                <field name="hrms_image_ids"
                                       context="{'default_hrms_template_id':id}" mode="kanban"
                                       options="{'create_text':'Add a Media','no_create_edit':True}"
                                       nolabel="1">
                                </field>
                            </div>
                        </page> -->
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!--Action
        of HRMS Emplotee -->
        <record id="action_hrms_employee"
            model="ir.actions.act_window">
            <field name="name">HRMS Employee</field>
            <field name="res_model">hrms.hr.employee</field>
            <field name="view_id" ref="hrms_employee_tree_view" />
            <field name="help" type="html">
                <div>
                    <br />
                    <br />
                    <br />
                    <p>
                        <b>There are no any Employee Created yet</b>
                    </p>
                </div>
            </field>
        </record>

        <!--Action,
        redirect instance kanban view to hrms employees-->
        <record id="action_hrms_employees_instance_ept" model="ir.actions.act_window">
            <field name="name">HRMS Employees</field>
            <field name="res_model">hrms.hr.employee</field>
            <field name="view_id" ref="hrms_employee_tree_view" />
        </record>

    </data>
</odoo>